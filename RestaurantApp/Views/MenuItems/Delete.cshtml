@model RestaurantApp.Models.MenuItem

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Menu Item</h2>

<h3>Are you sure you want to delete this?</h3>

<form method="post">
    <div class="form-border row">
        <input type="hidden" asp-for="@Model.Id"/>
        <div class="col-sm-8">
            <fieldset disabled> 
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Description" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <textarea style="height:150px;" asp-for="@Model.Description" class="form-control"></textarea>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Price" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Price" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Spicyness" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="@Model.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.CategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="@Model.CategoryType.Name" class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.FoodTypeId" class="custom-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="@Model.FoodType.Name" class="form-control" />
                    </div>
                </div>
            </fieldset>

        </div>


        <div class="col-sm-3 col-sm-offset-1">
            <img src="@Model.Image" style="width:100%; border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


        <br />
        <div class="form-group col-sm-12">
            <input type="submit"  value="Delete" class="btn btn-sm btn-danger"/>
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>

