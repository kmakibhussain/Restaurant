
@model RestaurantApp.ViewModel.MenuItemViewModel

@using RestaurantApp.Extensions

@{
    ViewData["Title"] = "Create";
}




<br />
<h2>Create Menu Item</h2>
<hr />

<form method="post" enctype="multipart/form-data">
    <div class="form-border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.Name" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <input asp-for="@Model.MenuItem.Name" class="form-control" />
            </div>

            <span asp-validation-for="@Model.MenuItem.Name" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.Description" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <textarea style="height:150px;" asp-for="@Model.MenuItem.Description" class="form-control"></textarea> 
            </div>

            <span asp-validation-for="@Model.MenuItem.Description" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.Price" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <input asp-for="@Model.MenuItem.Price" class="form-control" />
            </div>

            <span asp-validation-for="@Model.MenuItem.Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.Image" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>

        </div>


        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.Spicyness" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <select asp-for="@Model.MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.CategoryId" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <select asp-for="@Model.MenuItem.CategoryId" asp-items="@Model.CategoryType.ToSelectListItem(@Model.MenuItem.CategoryId)" class="form-control"></select>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="@Model.MenuItem.FoodTypeId" class="custom-label"></label>
            </div>
            <div class="col-sm-5">
                <select asp-for="@Model.MenuItem.FoodTypeId" asp-items="@Model.FoodType.ToSelectListItem(@Model.MenuItem.FoodTypeId)" class="form-control"></select>
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}













