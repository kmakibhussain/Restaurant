@model IEnumerable<RestaurantApp.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
}



<br />
<h2>Menu Item List</h2><br />
<p>
    <a asp-action="Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span>
        &nbsp; Create New
    </a>
</p>

<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.CategoryType.Name)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.FoodType.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>

                <td>
                    @Html.DisplayFor(m => item.CategoryType.Name)
                </td>

                <td>
                    @Html.DisplayFor(m => item.FoodType.Name)
                </td>

                <td>

                    @Html.Partial("_TableButtonsPartial", new IndividualButtonPartial { Id = item.Id })
                </td>
            </tr>
        }
    </table>

</div>






















