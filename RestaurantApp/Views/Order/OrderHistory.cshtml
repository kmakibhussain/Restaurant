@model IEnumerable<RestaurantApp.ViewModel.OrderDetailsViewModel>

@{
    ViewData["Title"] = "OrderHistory";
}

<h2>Order History</h2>

<div>
    @if (Model.Count()== 5)
    {
        <a asp-controller="Order" asp-action="OrderHistory" asp-route-id="1" class="btn btn-sm btn-success">Load all Order's</a>
    }
</div>
<br />

@*First when the page is loaded will display only 5 records along with the button, and pass route id 1*@

@if (Model.Count() > 0)
{
    //display history
    @foreach (var item in Model)
    {
        <div class="thumbnail row">
            @Html.Partial("_IndividualOrderDetails", item)
        </div>
    }
}
else
{
    <p>No past orders available...</p>
}
<br />