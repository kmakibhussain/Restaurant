@model RestaurantApp.Models.CategoryType

@{
    ViewData["Title"] = "Delete";
}


<br />
<h2>Delete Category Type</h2>
<br />
<h3>Are you sure you want to delete this?</h3>
<hr />
<br />

<form method="post">
    <div class="form-border">
        <input type="hidden" asp-for="Id" name="name" value="" />

        <fieldset disabled>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="DisplayOrder" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
            </div>

        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>





















